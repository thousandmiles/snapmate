<Window
    x:Class="SnapMate.Views.RegionSelectorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Select Region"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid>
        <!--  Semi-transparent dark overlay to dim the screen  -->
        <Rectangle Fill="#60000000" />

        <!--  Canvas for drawing selection rectangle  -->
        <Canvas x:Name="SelectionCanvas" />

        <!--  Instructions  -->
        <TextBlock
            Margin="0,20,0,0"
            Padding="15,8"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="#AA000000"
            FontSize="16"
            FontWeight="SemiBold"
            Foreground="White"
            Text="Drag to select a region ? ESC to cancel">
            <TextBlock.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Opacity="0.8"
                    ShadowDepth="2"
                    Color="Black" />
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>
